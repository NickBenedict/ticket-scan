<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Scan Ticket"
            android:textColor="#CC0000"
            android:textSize="32dp" />

        <!-- barcode -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Barcode"
                android:textColor="#0f0"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_barcode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textColor="#0f0"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <!-- field1 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_scan_Event_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textColor="#0ff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Event name"
                android:textColor="#0ff"
                android:textSize="22dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_Event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Section"
                android:textColor="#AA66CC"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_Section"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="Scan"
                android:textColor="#AA66CC"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_scan_Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>
        <!-- Row -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Row"
                android:textColor="#FF4444"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_Row"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textColor="#FF4444"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <!-- Seat -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Seat"
                android:textColor="#FF8800"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_Seat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textColor="#FF8800"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_scan_Seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <!-- Ticket price -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Ticket Price"
                android:textColor="#669900"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_Ticket_Price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textColor="#669900"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_Ticket_price_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <!-- Trait/Discosure -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Trait/Discosure"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button_scan_Trait"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:text="Scan"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/text_Trait_Discosure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
        </EditText>

        <Button
            android:id="@+id/button_sell"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sell on\nStubhub"
            android:textSize="22dp" />

        <ProgressBar
            android:id="@+id/progressBar_addlisting"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>